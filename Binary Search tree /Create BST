
#include <iostream>

using namespace std;

class Node{
    public:
    int data;
    Node* left;
    Node* right;
    
    Node (int data){
        this->data = data;
        left = NULL;
        right = NULL;
    }
};

Node* builBST(Node* root, int data){
    
    if(root == NULL){
        Node* temp = new Node(data);
        return temp;
    }
    
    if(data>root->data){
        root->right = builBST(root->right,data);
    }
    
    else{
        root->left=builBST(root->left,data);
    }
    
    return root;
    
}

void createBST(Node* &root){
    cout<<"Enter the value for root Node "<<endl;
    
    int data;
    cin>>data;
    
    while(data != -1){
        root=builBST(root,data);
        cin>>data;
    }
}

int main()
{
    Node* root = NULL;
    createBST(root);

    return 0;
}
