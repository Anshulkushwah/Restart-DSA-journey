
#include <iostream>
#include <queue>
using namespace std;

int getKthLargestElement(int arr[],int n, int k){
    
    priority_queue<int,vector<int>,greater<int>>minHeap;
    
    // process first k Element
    for(int i=0; i<k; i++){
        minHeap.push(arr[i]);
    }
    
    for(int i=k; i<n; i++){
        
        if(arr[i]>minHeap.top()){
            minHeap.pop();
            minHeap.push(arr[i]);
        }
    }
    
    return minHeap.top();
}

int main()
{
    int arr[] = {3,2,5,1,6,7,8,9};
    int n=8;
    int k=3;
    
    cout<<getKthLargestElement(arr,n,k)<<endl;

    return 0;
}
