class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int minSoFar= INT_MAX;
        int maxProfit = 0;
        int currDiff = 0;
        int size = prices.size();

        for(int i = 0; i<size;i++){
            minSoFar = min(minSoFar,prices[i]);

            currDiff = prices[i]-minSoFar;

            currDiff= prices[i] - minSoFar;

            maxProfit = max(currDiff, maxProfit);
        }

        return maxProfit;
    }
};
